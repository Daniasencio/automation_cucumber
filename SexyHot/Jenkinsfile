pipeline {
    agent  any

    stages {
        stage('Prepare') {
            steps {
                checkout scm
                sh 'ls -la'
            }
        }

        stage('Run tests') {
            steps {
           sh  dir ('SexyHot'){

            sh '/Applications/apache-maven-3.6.1/bin/mvn test'
}
            }
        }

        stage('Generate report') {
            steps {
                cucumber buildStatus: 'UNSTABLE',
                        fileIncludePattern: '**/CucumberReport.json',
                        trendsLimit: 10,
                        classifications: [
                                [
                                        'key': 'Browser',
                                        'value': 'Firefox'
                                ]
                        ]
            }
        }
    }
    post {
        always {
            echo 'Cleaning Workspace'

        }
        success {
            echo 'Successfully!'

        }
        failure {
            echo 'Failed!'
        }
        unstable {
            echo 'This will run only if the run was marked as unstable'
        }
        changed {
            echo 'This will run only if the state of the Pipeline has changed'
        }
    }
}
